<!--pages/shop/commodity.wxml-->
<i-tabs current="{{ current_scroll }}" scroll bindchange="handleChangeScroll">
	<i-tab key="tab1" title="衣服"></i-tab>
	<i-tab key="tab2" title="食品"></i-tab>
	<i-tab key="tab3" title="电器"></i-tab>
	<i-tab key="tab4" title="美妆"></i-tab>
	<i-tab key="tab5" title="家具"></i-tab>
	<i-tab key="tab6" title="其他"></i-tab>
</i-tabs>
<scroll-view scroll-y="true" style="height: 84vh;">
	<block wx:for="{{list}}" wx:key="id">
		<view class="i-class i-card">
			<image class="i-card-header-thumb" src="{{ item.url }}" mode="aspectFit" wx:if="{{ item.url }}" />
			<view class="i-class i-card-body">{{ item.title }}</view>
			<view class="i-class i-card-content">
				<view class="i-class i-card-footer">¥ {{ item.seller }}</view>
				<button class="weui-btn i-class i-card-buy" type="primary" size="mini" id="{{item.id}}" bindtap="submit">查看详情</button>
			</view>
		</view>
	</block>
</scroll-view>
<i-tab-bar i-tab-bar="my-tab-bar" current="{{ current }}" color="#f759ab" bindchange="handleChange">
	<i-tab-bar-item key="homepage" icon="add" title="发布商品"></i-tab-bar-item>
</i-tab-bar>